<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ReportePresupuesto" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <style name="Title" forecolor="#006400" fontName="SansSerif" fontSize="26" isBold="true"/>
    <style name="SubTitle" forecolor="#666666" fontName="SansSerif" fontSize="14"/>
    <style name="ColumnHeader" forecolor="#FFFFFF" backcolor="#006400" fontName="SansSerif" fontSize="12" isBold="true"/>
    <style name="Detail" fontName="SansSerif" fontSize="11"/>
    <style name="Row" mode="Transparent">
        <conditionalStyle>
            <conditionExpression><![CDATA[$V{REPORT_COUNT}%2 == 0]]></conditionExpression>
            <style backcolor="#E8F5E9"/>
        </conditionalStyle>
    </style>
    <style name="CardLabel" forecolor="#555555" fontName="SansSerif" fontSize="10" isBold="true"/>
    <style name="CardValue" forecolor="#000000" fontName="SansSerif" fontSize="14" isBold="true"/>

    <parameter name="tituloReporte" class="java.lang.String"/>
    <parameter name="fechaImpresion" class="java.util.Date"/>
    <parameter name="p_categoria" class="java.lang.String"/>
    <parameter name="p_periodo" class="java.lang.String"/>
    <parameter name="p_limite" class="java.math.BigDecimal"/>
    <parameter name="p_gastado" class="java.math.BigDecimal"/>
    <parameter name="p_disponible" class="java.math.BigDecimal"/>

    <field name="fecha" class="java.util.Date"/>
    <field name="concepto" class="java.lang.String"/>
    <field name="cuenta" class="java.lang.String"/>
    <field name="monto" class="java.math.BigDecimal"/>

    <background>
        <band splitType="Stretch"/>
    </background>

    <title>
        <band height="80" splitType="Stretch">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="5" backcolor="#006400"/>
                <graphicElement>
                    <pen lineWidth="0.0"/>
                </graphicElement>
            </rectangle>

            <staticText>
                <reportElement style="Title" x="0" y="15" width="400" height="35"/>
                <text><![CDATA[Presupuesto]]></text>
            </staticText>

            <textField>
                <reportElement style="SubTitle" x="0" y="50" width="300" height="25"/>
                <textFieldExpression><![CDATA["Categoría: " + $P{p_categoria}]]></textFieldExpression>
            </textField>

            <textField pattern="MMMMM yyyy">
                <reportElement x="400" y="60" width="155" height="20" forecolor="#666666"/>
                <textElement textAlignment="Right">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <pageHeader>
        <band height="90" splitType="Stretch">

            <rectangle radius="5">
                <reportElement x="0" y="10" width="170" height="70" backcolor="#F9F9F9"/>
                <graphicElement>
                    <pen lineWidth="1.0" lineColor="#DDDDDD"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement style="CardLabel" x="10" y="20" width="150" height="20"/>
                <text><![CDATA[LÍMITE ASIGNADO]]></text>
            </staticText>
            <textField pattern="¤ #,##0.00">
                <reportElement style="CardValue" x="10" y="40" width="150" height="30" forecolor="#666666"/>
                <textFieldExpression><![CDATA[$P{p_limite}]]></textFieldExpression>
            </textField>
            <rectangle>
                <reportElement x="0" y="10" width="5" height="70" backcolor="#666666"/>
                <graphicElement><pen lineWidth="0.0"/></graphicElement>
            </rectangle>

            <rectangle radius="5">
                <reportElement x="190" y="10" width="170" height="70" backcolor="#F9F9F9"/>
                <graphicElement>
                    <pen lineWidth="1.0" lineColor="#DDDDDD"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement style="CardLabel" x="200" y="20" width="150" height="20"/>
                <text><![CDATA[TOTAL GASTADO]]></text>
            </staticText>
            <textField pattern="¤ #,##0.00">
                <reportElement style="CardValue" x="200" y="40" width="150" height="30" forecolor="#E53935"/>
                <textFieldExpression><![CDATA[$P{p_gastado}]]></textFieldExpression>
            </textField>
            <rectangle>
                <reportElement x="190" y="10" width="5" height="70" backcolor="#E53935"/>
                <graphicElement><pen lineWidth="0.0"/></graphicElement>
            </rectangle>

            <rectangle radius="5">
                <reportElement x="380" y="10" width="175" height="70" backcolor="#E8F5E9"/>
                <graphicElement>
                    <pen lineWidth="1.0" lineColor="#006400"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement style="CardLabel" x="390" y="20" width="155" height="20" forecolor="#006400"/>
                <text><![CDATA[DISPONIBLE ACTUAL]]></text>
            </staticText>

            <textField pattern="¤ #,##0.00">
                <reportElement style="CardValue" x="390" y="40" width="155" height="30" forecolor="#006400"/>
                <textElement>
                    <font size="18"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{p_disponible}]]></textFieldExpression>
            </textField>

            <rectangle>
                <reportElement x="380" y="10" width="5" height="70" backcolor="#006400"/>
                <graphicElement><pen lineWidth="0.0"/></graphicElement>
            </rectangle>
        </band>
    </pageHeader>

    <columnHeader>
        <band height="35" splitType="Stretch">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="35" backcolor="#006400"/>
                <graphicElement><pen lineWidth="0.0"/></graphicElement>
            </rectangle>

            <staticText>
                <reportElement style="ColumnHeader" x="10" y="0" width="80" height="35"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[FECHA]]></text>
            </staticText>
            <staticText>
                <reportElement style="ColumnHeader" x="100" y="0" width="200" height="35"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[CONCEPTO]]></text>
            </staticText>
            <staticText>
                <reportElement style="ColumnHeader" x="310" y="0" width="130" height="35"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[CUENTA]]></text>
            </staticText>
            <staticText>
                <reportElement style="ColumnHeader" x="450" y="0" width="95" height="35"/>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <text><![CDATA[MONTO]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="25" splitType="Stretch">
            <frame>
                <reportElement style="Row" mode="Opaque" x="0" y="0" width="555" height="25"/>

                <textField pattern="dd/MM/yyyy">
                    <reportElement style="Detail" x="10" y="0" width="80" height="25"/>
                    <textElement verticalAlignment="Middle"/>
                    <textFieldExpression><![CDATA[$F{fecha}]]></textFieldExpression>
                </textField>
                <textField textAdjust="StretchHeight">
                    <reportElement style="Detail" x="100" y="0" width="200" height="25"/>
                    <textElement verticalAlignment="Middle"/>
                    <textFieldExpression><![CDATA[$F{concepto}]]></textFieldExpression>
                </textField>
                <textField>
                    <reportElement style="Detail" x="310" y="0" width="130" height="25"/>
                    <textElement verticalAlignment="Middle"/>
                    <textFieldExpression><![CDATA[$F{cuenta}]]></textFieldExpression>
                </textField>
                <textField pattern="¤ #,##0.00" isBlankWhenNull="true">
                    <reportElement style="Detail" x="450" y="0" width="95" height="25"/>
                    <textElement textAlignment="Right" verticalAlignment="Middle">
                        <font isBold="true"/>
                    </textElement>
                    <textFieldExpression><![CDATA[$F{monto}]]></textFieldExpression>
                </textField>
            </frame>
        </band>
    </detail>

    <pageFooter>
        <band height="40" splitType="Stretch">
            <line>
                <reportElement x="0" y="10" width="555" height="1" forecolor="#006400"/>
            </line>
            <textField>
                <reportElement style="Detail" x="0" y="15" width="280" height="20" forecolor="#666666"/>
                <textFieldExpression><![CDATA["Generado el: " + new java.text.SimpleDateFormat("dd/MM/yyyy HH:mm").format(new java.util.Date())]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="Detail" x="430" y="15" width="80" height="20" forecolor="#666666"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Pág " + $V{PAGE_NUMBER} + " de"]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement style="Detail" x="510" y="15" width="40" height="20" forecolor="#666666"/>
                <textFieldExpression><![CDATA[" " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>